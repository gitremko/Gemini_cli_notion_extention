{
    "name":  "notion-mcp-server",
    "version":  "0.1.0",
    "private":  true,
    "type":  "module",
    "description":  "MCP server exposing Notion pages and basic actions for Gemini/Claude/Copilot MCP clients.",
    "scripts":  {
                    "dev":  "tsx watch src/server.ts",
                    "dev:http":  "tsx watch src/http.ts",
                    "start":  "node dist/server.js",
                    "build":  "tsc -p tsconfig.json \u0026\u0026 npm run bundle",
                    "bundle":  "esbuild src/cli.ts --bundle --platform=node --format=cjs --sourcemap --outfile=dist/extension.cjs",
                    "lint":  "echo \u0027no linter configured\u0027"
                },
    "bin":  {
                "notion-mcp":  "dist/cli.js"
            },
    "dependencies":  {
                         "@modelcontextprotocol/sdk":  "^1.20.1",
                         "@notionhq/client":  "^2.2.15",
                         "zod":  "^3.23.8",
                         "express":  "^4.19.2"
                     },
    "devDependencies":  {
                            "tsx":  "^4.19.1",
                            "typescript":  "^5.6.3",
                            "@types/express":  "^4.17.21",
                            "esbuild":  "^0.25.11"
                        }
}
